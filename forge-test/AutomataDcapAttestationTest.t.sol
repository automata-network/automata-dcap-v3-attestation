pragma solidity ^0.8.13;

import "./utils/PCCSSetupBase.sol";
import "./utils/RiscZeroSetup.sol";
import {AutomataDcapV3Attestation, V3Struct, V3Parser} from "../contracts/v3/AutomataDcapV3Attestation.sol";
import {BytesUtils} from "../contracts/utils/BytesUtils.sol";

contract AutomataDcapAttestationTest is PCCSSetupBase, RiscZeroSetup {
    using BytesUtils for bytes;

    AutomataDcapV3Attestation attestation;

    bytes6 constant fmspc = 0x00606a000000;
    bytes constant sampleQuote =
        hex"";
    bytes32 imageId = vm.envBytes32("DCAP_IMAGE_ID");

    function setUp() public override {
        super.setUp();
        vm.startPrank(admin);

        // PCCS Setup
        pcsDaoUpserts();
        qeIdDaoUpsert(3, "/assets/0624/identity.json");
        fmspcTcbDaoUpsert("/assets/0624/tcbinfo.json");

        // RiscZero setup
        setUpRiscZero();

        // DCAP Contract Deployment
        attestation = new AutomataDcapV3Attestation(
            address(enclaveIdDao),
            address(enclaveIdHelper),
            address(x509),
            address(fmspcTcbDao),
            address(tcbHelper),
            address(x509Crl),
            address(pcsDao),
            address(riscZeroVerifier),
            imageId
        );

        vm.stopPrank();
    }

    function testAttestation() public {
        bytes memory output = attestation.verifyAndAttestOnChain(sampleQuote);
        bytes memory rawLocalIsvReport = sampleQuote.substring(48, 384);
        bytes memory expectedOutput = abi.encodePacked(
            uint16(3), // quote_version
            bytes4(0), // SGX_TEE_TYPE = 0x00000000
            uint8(1), // TCB_SW_HARDENING_NEEDED
            fmspc,
            rawLocalIsvReport
        );
        assertEq(keccak256(output), keccak256(expectedOutput));
    }

    function testParsedQuoteAttestation() public {
        V3Struct.ParsedV3Quote memory v3quote = _parseV3QuoteBytes(sampleQuote);
        bytes memory output = attestation.verifyParsedQuoteAndAttestOnChain(v3quote);
        bytes memory rawLocalIsvReport = V3Parser.packQEReport(v3quote.localEnclaveReport);
        bytes memory expectedOutput = abi.encodePacked(
            uint16(3), // quote_version
            bytes4(0), // SGX_TEE_TYPE = 0x00000000
            uint8(1), // TCB_SW_HARDENING_NEEDED
            fmspc,
            rawLocalIsvReport
        );

        assertEq(keccak256(output), keccak256(expectedOutput));
    }

    function testAttestationWithRisc0() public {
        bytes memory journal =
            hex"";
        bytes memory seal =
            hex"";

        bytes memory output = attestation.verifyAndAttestWithZKProof(journal, seal);
    }

    /// === HELPER FUNCTIONS ===

    function _parseV3QuoteBytes(bytes memory v3QuoteBytes)
        private
        pure
        returns (V3Struct.ParsedV3Quote memory v3quote)
    {
        bool success = false;
        (success, v3quote,,) = V3Parser.parseInput(v3QuoteBytes);
        require(success, "V3Quote bytes parse failed");
    }
}
